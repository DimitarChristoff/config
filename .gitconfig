[user]
        name = DimitarChristoff
        email = christoff@gmail.com
[alias]
        ci = commit
        st = status
        co = checkout
        br = branch
        lg = log -p
        stage = add
        unstage = reset HEAD
        plog = log --pretty=tformat:'%h %Cblue%cr%Creset %cn %Cgreen%s%Creset'
	graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --all
	timmeh = commit -am'TIMMEH\\!'
[color]
        ui = auto
[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
[color "status"]
        added = yellow
        changed = green
        untracked = cyan
[push]
        default = current
[core]
	excludesfile = ~/.gitignore_global
